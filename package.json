  "repository": {
    "type": "git",
    "url": "https://github.com/p2party/core-js.git"
  },
  "author": {
    "name": "Ondemos Foundation",
    "email": "security@ondemos.org",
    "url": "https://ondemos.org"
  },
  "contributors": [
    {
      "name": "Dimitris Karoukis",
      "email": "dim@ondemos.org",
      "url": "https://ondemos.org"
    }
  ],
